<UserControl x:Class="QuickSearch.SearchWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuickSearch"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Margin="40">
    <UserControl.Effect>
        <DropShadowEffect BlurRadius="40" ShadowDepth="0" Color="Black" Opacity="1"/>
    </UserControl.Effect>
    <Grid Width="600" Height="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="SearchBox" Grid.Row="0" Padding="5" TextChanged="SearchBox_TextChanged" PreviewKeyDown="SearchBox_KeyDown"
                 Background="{DynamicResource PopupBackgroundBrush}"/>
        <ListBox x:Name="SearchResults" Grid.Row="1" Background="{DynamicResource PopupBackgroundBrush}"/>
    </Grid>
</UserControl>
